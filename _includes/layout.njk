---
title: Game Showcase
description: A site to showcase various games.
---
<!DOCTYPE html>
<html lang="en-GB">
    <head>
        <title>{{ title }}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="{{ description }}">

        <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

        <link rel="preload" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=groups,person,star_rate,star_rate_half&display=block" as="style" type="text/css" crossorigin>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=groups,person,star_rate,star_rate_half&display=block" crossorigin>

        <link rel="stylesheet" href="/css/layout.css">
        {% if style %}
            <link rel="stylesheet" href="{{ style }}">
        {% endif %}

        <meta property="og:title" content="{{ title }}">
        <meta property="og:description" content="{{ description }}">
        {% if image %}
            <meta property="og:image" content="{{ site.url }}{{ image.url }}">

            <meta property="twitter:image" content="{{ site.url }}{{ image.url }}">
            <meta property="twitter:card" content="summary_large_image">
        {% endif %}

        
    </head>
    <body>
        {% include "header.njk" %}
        <div class="main-container">
            <main>
                {{ content | safe }}
            </main>
        </div>
        <footer>
            {% if site.repositoryUrl %}
                Source on <a href="{{ site.repositoryUrl }}">Github</a>
            {% else %}
                Local Development
            {% endif %}
        </footer>
    </body>
</html>