---
pagination:
  data: games
  size: 1
  alias: game
  addAllPagesToCollections: true
layout: layout
permalink: "{{ game | gameUrl }}"
eleventyComputed:
  title: "{{ game.name }}"
  description: "{{ game.description }}"
style: "/css/game.css"
tags: game
---

<section class="main-card card">
  <div class="description">
    <div>
      <h1 class="game-name">{{ game.name }}</h1>
      {{ game.description }}
    </div>
    <div class="tags">
      {% for tag in game.tags %}
        <a href="{{ tag | tagUrl }}" class="tag">{{ tag | forceCapitalize }}</a>
      {% endfor %}
    </div>
  </div>
  <div class="meta">
    <div class="meta-item">
      Rating
      {% set rating = ((game.rating * 2) | round) / 2 %}
      <span class="meta-value">
        {% for i in range(1, 6) %}
          {% set fraction = i - rating %}
          
          {% if rating >= i %}
            <span class="material-symbols-rounded icon rating-icon" filled>star_rate</span>
          {% elif (fraction > 0) and (fraction < 1) %}
            <span class="material-symbols-rounded icon rating-icon">star_rate_half</span>  
          {% else %}
            <span class="material-symbols-rounded icon rating-icon">star_rate</span>
          {% endif %}
          
        {% endfor %}
      </span>
    </div>
    <div class="meta-item">
      Players
      <span class="meta-value">
        {{ game.players | capitalize }}
        <span class="material-symbols-rounded icon" filled>
          {% if game.players === 'singleplayer' %}
            person
          {% elif game.players === 'multiplayer' %}
            groups
          {% endif %}
        </span>
      </span>
    </div>
    <div class="meta-item">
      Genre
      <span class="meta-value">{{ game.genre | forceCapitalize }}</span>
    </div>
    <div class="meta-item">
      Developer
      <span class="meta-value">{{ game.developer | forceCapitalize }}</span>
    </div>
    <div class="meta-item">
      Release Date
      <span class="meta-value">{{ game.release }}</span>
    </div>
  </div>
</section>

{% if game.images | length %}
  <section class="image-container">
    {% for image in game.images %}
      {% if not image.alt %}
        {% warn "No alt field for image: " + image.main %}
      {% endif %}
      <img class="game-image" alt="{{ image.alt }}" src="/img/{{ image.main }}" eleventy:widths="auto,600" sizes="auto">
    {% endfor %}
  </section>
{% endif %}

<section class="card">
  <h2>System Requirements</h2>
  <div>
    {% for platform in ["windows", "linux", "mac", "proton"] %}
      {% if game.system_requirements.operating_system[platform] %}
        <svg class="icon">
          <use href="/icons.svg#{{ platform }}"></use>
        </svg>
      {% endif %}
    {% endfor %}
  </div>
</section>