---
pagination:
  data: games
  size: 1
  alias: game
layout: layout
permalink: "games/{{ game.name | slugify }}/"
eleventyComputed:
  title: "{{ game.name }}"
style: "/game.css"
---

<div class="front-container">
  <div>
    <h1 class="game-name">{{ game.name }}</h1>
    {{ game.description }}
  </div>
  <div class="meta-container">
    <div>
      Rating:
      {% set rating = ((game.rating * 2) | round) / 2 %}
      {% for i in range(1, 6) %}
        {% set fraction = i - rating %}
        
        {% if rating >= i %}
          <span class="material-symbols-rounded rating-icon" filled>star_rate</span>
        {% elif (fraction > 0) and (fraction < 1) %}
          <span class="material-symbols-rounded rating-icon">star_rate_half</span>  
        {% else %}
          <span class="material-symbols-rounded rating-icon">star_rate</span>
        {% endif %}
        
      {% endfor %}
    </div>
  </div>
</div>