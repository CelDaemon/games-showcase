---
pagination:
  data: games
  size: 1
  alias: game
layout: layout
permalink: "games/{{ game.name | slugify }}/"
eleventyComputed:
  title: "{{ game.name }}"
style: "/game.css"
---

<div class="front-container">
  <div class="front-main-container">
    <div>
      <h1 class="game-name">{{ game.name }}</h1>
      {{ game.description }}
    </div>
    <div class="tags">
      {% for tag in game.tags %}
        <span class="tag">{{ tag | forceCapitalize }}</span>
      {% endfor %}
    </div>
  </div>
  <div class="meta-container">
    <div>
      Rating
      {% set rating = ((game.rating * 2) | round) / 2 %}
      <span>
        {% for i in range(1, 6) %}
          {% set fraction = i - rating %}
          
          {% if rating >= i %}
            <span class="material-symbols-rounded icon rating-icon" filled>star_rate</span>
          {% elif (fraction > 0) and (fraction < 1) %}
            <span class="material-symbols-rounded icon rating-icon">star_rate_half</span>  
          {% else %}
            <span class="material-symbols-rounded icon rating-icon">star_rate</span>
          {% endif %}
          
        {% endfor %}
      </span>
    </div>
    <div>
      Players
      <span>
        {{ game.players | capitalize }}
        <span class="material-symbols-rounded icon players-icon" filled>
          {% if game.players === 'singleplayer' %}
            person
          {% elif game.players === 'multiplayer' %}
            groups
          {% endif %}
        </span>
      </span>
    </div>
    <div>
      Genre
      <span>{{ game.genre | forceCapitalize }}</span>
    </div>
    <div>
      Developer
      <span>{{ game.developer | forceCapitalize }}</span>
    </div>
    <div>
      Release Date
      <span>{{ game.release }}</span>
    </div>
  </div>
</div>