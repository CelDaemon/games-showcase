---
pagination:
  data: games
  size: 1
  alias: game
  addAllPagesToCollections: true
layout: layout
permalink: "{{- game | gameUrl -}}"
eleventyComputed:
  title: "{{- game.title -}}"
  description: "{{- game.description -}}"
  image: "{{- game.images | keys | first if game.images else undefined -}}"
style: "/css/game.css"
tags: game
---


{%- macro metaItem(name) -%}
  <div class="list-item meta-item">
    {{- name -}}
    <span class="meta-value">
      {{- caller() -}}
    </span>
    </div>
{%- endmacro -%}

{%- macro fontIcon(icon, classes=[], filled=false) -%}
  <span class="material-symbols-rounded {{ classes.join(' ') }}" {% if filled -%}data-filled{%- endif %}>{{- icon -}}</span>
{%- endmacro -%}

{%- macro svgIcon(icon, label) -%}
  <svg role="img" aria-label="{{- label -}}" class="icon">
    <use href="/icons.svg#{{- icon -}}"></use>
  </svg>
{%- endmacro -%}

{%- macro iconValue(value, icon) -%}
  <span class="icon-value">
    
    {{- icon -}}
    <span>
      {{- value -}}
    </span>
  </span>
{%- endmacro -%}

<section>
  <div class="main-card card">
    <div class="description">
      <div>
        <h1 id="game-title">{{- game.title -}}</h1>
        {{- game.description -}}
      </div>
      <div class="tags">
        {%- for tag in game.tags -%}
          <a href="{{- tag | tagUrl -}}" class="tag filled-tag">
            {{- tag | forceCapitalize -}}
          </a>
        {%- endfor -%}
      </div>
    </div>
    <div id="meta">
      {%- call metaItem('Rating') -%}
        {%- set rating = ((game.rating * 2) | round) / 2 -%}
        {%- for i in range(1, 6) -%}
          {%- set fraction = i - rating -%}
          {%- if rating >= i -%}
            {{ fontIcon('star_rate', ['icon', 'rating-icon'], filled=true) }}
          {%- elif (fraction > 0) and (fraction < 1) -%}
            {{ fontIcon('star_rate_half', ['icon', 'rating-icon']) }}
          {%- else -%}
            {{ fontIcon('star_rate', ['icon', 'rating-icon']) }}
          {%- endif -%}
        {%- endfor -%}
      {%- endcall -%}
      {%- call metaItem('Players') -%}
        {{ iconValue('Multiplayer' if game.multiplayer else 'Singleplayer', fontIcon('groups' if game.multiplayer else 'person', ['icon'], filled=true)) }}
      {%- endcall -%}
      {%- call metaItem('Genre') -%}
        {{- game.genre | forceCapitalize -}}
      {%- endcall -%}
      {%- call metaItem('Developer') -%}
        {{- game.developer | forceCapitalize -}}
      {%- endcall -%}
      {%- call metaItem('Release Date') -%}
        {{- game.release -}}
      {%- endcall -%}
    </div>
  </div>
  
</section>

{%- if game.images -%}
  <section>
    <h2>Screenshots</h2>
    <div class="image-container">
      {%- for src, alt in game.images -%}
        <img class="game-image" alt="{{- alt -}}" src="/img/{{- src -}}" eleventy:widths="auto,720" sizes="auto">
      {%- endfor -%}
    </div>
  </section>
{%- endif -%}

{%- set vendors = {
    "intel": "Intel",
    "amd": "AMD",
    "nvidia": "NVIDIA" 
  }
-%}


{%- macro vendoredList(list) -%}
  {%- for vendor, detail in list -%}
    <div class="vendored-item">
      {{- iconValue(detail, svgIcon(vendor, vendors[vendor])) -}}
    </div>
  {%- endfor -%}
{%- endmacro -%}

<section>
  <h2>System Requirements</h2>
  <div class="column-card-container">
    <section class="card column-card">
      <h3>Operating System</h3>
      {%- for platform, version in game.system_requirements.operating_system -%}
        <div class="list-item">
          {{ iconValue(platform | forceCapitalize, svgIcon(platform, platform | forceCapitalize)) }}
          {%- if version !== true -%}
            <span class="tag outline-tag">{{- version -}}</span>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </section>
    <section class="card column-card">
      <h3>Hardware</h3>
      {%- if game.system_requirements.processor | length -%}
        {%- call metaItem('Processor') -%}
          {{- vendoredList(game.system_requirements.processor) -}}
        {%- endcall -%}
      {%- endif -%}
      {%- if game.system_requirements.graphics_unit | length -%}
        {%- call metaItem('Graphics Unit') -%}
          {{- vendoredList(game.system_requirements.graphics_unit) -}}
        {%- endcall -%}
      {%- endif -%}
      {%- if game.system_requirements.memory -%}
        {%- call metaItem('Memory') -%}
          {{- game.system_requirements.memory -}}
        {%- endcall -%}
      {%- endif -%}
      {%- if game.system_requirements.storage -%}
        {%- call metaItem('Storage') -%}
          {{- game.system_requirements.storage -}}
        {%- endcall -%}
      {%- endif -%}
    </section>
  </div>
</section>